<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proiectandroid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:name=".Database.ApplicationController"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.HomePage"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Activities.NewArticlePage"
            android:label="NewArticlePage"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity

            android:name=".Activities.SearchPage"
            android:label="SearchPage"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.EditPage"
            android:label="EditPage"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.ViewPage"
            android:label="ViewPage"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Activities.FullViewPage"
            android:label="FullViewPage"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>